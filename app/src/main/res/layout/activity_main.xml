<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#F8F8FF"
    >


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        app:cardBackgroundColor="#F8F8FF"
        android:id="@+id/bkcard"
        app:cardCornerRadius="20dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
    <WebView
        android:id="@+id/webView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_above="@id/self"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="10dp" />

    <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="10dp"
                android:id="@+id/donate"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                app:cardBackgroundColor="#4c4c4c"
                app:cardCornerRadius="10px">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/text"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="1dp"
                        android:text="Donate"
                        android:textColor="#ffffe4 "
                        android:textSize="10dp"
                        android:textStyle="bold"></TextView>

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="37dp"
                        android:layout_height="43dp"
                        android:layout_marginLeft="9dp"
                        android:layout_marginRight="5px"
                        android:layout_marginTop="5px"
                        android:layout_toRightOf="@+id/text"
                        card_view:srcCompat="@drawable/coin" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/news"
                android:layout_alignParentLeft="true"
                app:cardBackgroundColor="#303030"
                android:layout_above="@+id/donate"
                app:cardCornerRadius="10px">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/text4"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="1dp"
                        android:text="News"
                        android:textColor="#ffffe4 "
                        android:textSize="10dp"
                        android:textStyle="bold"/>

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="37dp"
                        android:layout_height="43dp"
                        android:layout_marginLeft="9dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/text4"
                        card_view:srcCompat="@drawable/paper" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="10dp"
                android:id="@+id/self"
                android:layout_alignParentLeft="true"
                app:cardBackgroundColor="#4c4c4c"
                android:layout_above="@+id/news"
                app:cardCornerRadius="10px">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/text10"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="1dp"
                        android:text="CoVID-19 \nSelf test"
                        android:textColor="#ffffe4 "
                        android:textSize="10dp"
                        android:textStyle="bold"></TextView>

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="37dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="11dp"
                        android:layout_marginTop="5px"
                        android:layout_marginRight="5px"
                        android:layout_centerInParent="true"
                        android:layout_toRightOf="@+id/text10"
                        card_view:srcCompat="@drawable/test" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="20px"
                android:id="@+id/appointment"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                app:cardBackgroundColor="#303030"
                app:cardCornerRadius="10px">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/text2"
                        android:layout_width="61dp"
                        android:layout_height="34dp"
                        android:layout_marginLeft="10px"
                        android:layout_marginTop="2px"
                        android:gravity="center"
                        android:text="Create Appointment"
                        android:textColor="#ffffe4 "
                        android:textSize="10dp"
                        android:textStyle="bold"></TextView>

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="5px"
                        android:layout_toRightOf="@+id/text2"
                        card_view:srcCompat="@drawable/hospital" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="20px"
                android:id="@+id/helpline"
                android:layout_above="@id/appointment"
                android:layout_centerInParent="true"
                app:cardBackgroundColor="#4c4c4c"
                app:cardCornerRadius="10px">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/text5"
                        android:layout_width="61dp"
                        android:layout_height="34dp"
                        android:layout_marginLeft="10px"
                        android:layout_marginTop="2px"
                        android:gravity="center"
                        android:text="Helpline"
                        android:textColor="#ffffe4 "
                        android:textSize="10dp"
                        android:textStyle="bold"></TextView>

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="5px"
                        android:layout_toRightOf="@+id/text5"
                        card_view:srcCompat="@drawable/phone" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="20px"
                android:id="@+id/govt"
                android:layout_above="@id/helpline"
                android:layout_centerInParent="true"
                app:cardBackgroundColor="#303030"
                app:cardCornerRadius="10px">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/text53"
                        android:layout_width="61dp"
                        android:layout_height="34dp"
                        android:layout_marginLeft="10px"
                        android:layout_marginTop="2px"
                        android:gravity="center"
                        android:text="Govt.\nServices"
                        android:textColor="#ffffe4 "
                        android:textSize="10dp"
                        android:textStyle="bold"></TextView>

                    <ImageView
                        android:id="@+id/imageView71"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="5px"
                        android:layout_toRightOf="@+id/text53"
                        card_view:srcCompat="@drawable/govt" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="20px"
                android:id="@+id/contact"
                android:layout_alignParentBottom="true"
                app:cardBackgroundColor="#4c4c4c"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                app:cardCornerRadius="10px">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:layout_marginTop="15px"
                        android:gravity="center"
                        android:text="Others"
                        android:layout_centerInParent="true"
                        android:textColor="#ffffe4"
                        android:textSize="10dp"
                        android:textStyle="bold"></TextView>

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="27dp"
                        android:layout_height="33dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="5px"
                        android:layout_marginRight="2dp"
                        android:layout_toRightOf="@+id/text3"
                        card_view:srcCompat="@drawable/menu" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_marginLeft="20px"
                android:id="@+id/services"
                android:layout_above="@id/contact"
                app:cardBackgroundColor="#303030"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20px"
                android:layout_alignParentRight="true"
                app:cardCornerRadius="10px">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/text6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:layout_marginTop="15px"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:text="Buy\nItems"
                        android:textColor="#ffffe4"
                        android:textSize="10dp"
                        android:textStyle="bold"></TextView>

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="5px"
                        android:layout_toRightOf="@+id/text6"
                        card_view:srcCompat="@drawable/buy" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_marginLeft="20px"
        android:id="@+id/more"
        android:layout_above="@id/services"
        app:cardBackgroundColor="#4c4c4c"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentRight="true"
        app:cardCornerRadius="10px">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:layout_marginTop="25px"
                android:gravity="center"
                android:text="More"
                android:layout_centerInParent="true"
                android:textColor="#ffffe4"
                android:textSize="10dp"
                android:textStyle="bold"></TextView>

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="39dp"
                android:layout_height="33dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="5px"
                android:layout_marginRight="2dp"
                android:layout_toRightOf="@+id/text11"
                card_view:srcCompat="@drawable/click" />
        </RelativeLayout>
        </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/webView1"
                android:layout_centerInParent="true"
                android:layout_marginBottom="-30dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="CoVID Care : Statewise Live Data"
                android:textColor="#000"
                android:textSize="11dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-50dp"
        android:layout_centerInParent="true"
        android:src="@drawable/cover" />

</RelativeLayout>
